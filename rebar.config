{relx, [{release, {valvex, "0.1.0"}, [valvex]},
        {dev_mode, false},
        {sys_config, "./config/sys.config"},
        {include_erts, true},
        {extended_start_script, true}]}.
{erl_opts,            [ debug_info
                      , warnings_as_errors
                      ]}.
{xref_checks,         [undefined_function_calls]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{deps, [ {common_eunit, {git, "https://github.com/permelin/common_eunit.git", {tag, "v0.1.1"}}}
       ]}.
